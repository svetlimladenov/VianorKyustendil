@using Microsoft.AspNetCore.Identity
@using VianorKyustendil.Data.Models
@using VianorKyustendil.Web.Services.HomeServices
@inject SignInManager<VianorKyustendilUser> SignInManager
@inject UserManager<VianorKyustendilUser> UserManager
@inject IVianorServices VianorServices
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
     if (VianorServices.AreWeHiring)
     {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Apply</a>
        </li>
     }
    
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}